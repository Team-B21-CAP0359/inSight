<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/avatar_barang"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:src="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nama_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="6dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/avatar_barang"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nama User" />

        <TextView
            android:id="@+id/genre_barang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_barang"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/avatar_barang"
            app:layout_constraintTop_toBottomOf="@id/nama_barang"
            tools:text="User Name Github" />
        <TextView
            android:id="@+id/deskripsi_barang"
            android:maxLines="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nama_barang"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/avatar_barang"
            app:layout_constraintTop_toBottomOf="@id/genre_barang"
            tools:text="User Name Github" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>